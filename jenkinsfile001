pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                echo 'Building'
            }
        }
        stage('Test'){
            steps{
                echo 'Testing'
            }
        }
        stage('Deploy-Staging'){
            steps{
                echo 'Deploy-Staging'
            }
        }
        stage('Approve'){  
            steps{
                input message: 'Do you want to deploy?', submitter: 'ops' 
            }
        }  
        
        stage('Sanitycheck'){
            steps{
                input "Does the staging environment look ok?"
            }
        }
        stage('Deploy-Production'){
            steps{
                echo 'Deploy-Staging'
                input message: 'Do you want to deploy?', submitter: 'ops' 
            }
        }
    }
}
