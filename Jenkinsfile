                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                echo 'Deploy-Staging'
                sleep 10
              
            }
        }
        
        stage('Deploy-Production'){
            steps{
                echo 'Deploy-Production'
                sleep 10
            }
        }
    }
}
